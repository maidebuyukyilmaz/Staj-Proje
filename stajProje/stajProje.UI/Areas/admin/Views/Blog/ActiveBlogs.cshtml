@model IEnumerable<stajProje.UI.DTOs.BlogDtos.BlogDto>

@{
      
       ViewData["Title"] = "Aktif Bloglar";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";

}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Yazar</th>
            <th>Yayınlanma Tarihi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@Html.ActionLink(blog.Title, "Details", new { id = blog.Id })</td>
                <td>@blog.CategoryId</td>
                <td>@blog.AuthorId</td> 
                <td>@blog.PublishedAt?.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>