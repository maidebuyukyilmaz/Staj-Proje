@model stajProje.UI.DTOs.BlogDtos.BlogDto

@{
    ViewData["Title"] = "Blog Detayları";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>@Model.Title</h1>
<p>Kategori: @Model.Category.Name</p> 
<p>Yazar: @Model.Author.Name @Model.Author.Surname</p>
<p>İçerik: @Model.Content</p>
<p>Yayınlanma Tarihi: @Model.PublishedAt?.ToString("dd/MM/yyyy")</p>

<form asp-action="UpdateActivity" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div>
        <label>Aktif Mi?</label>
        <input type="checkbox" name="IsActive" value="true" @(Model.IsActive ? "checked" : "") />
    </div>
    <div>
        <label>Yayınlanma Tarihi</label>
        <input type="datetime" name="PublishedAt" value="@Model.PublishedAt?.ToString("yyyy-MM-ddTHH:mm")" />
    </div>
    <button type="submit">Güncelle</button>
</form>
