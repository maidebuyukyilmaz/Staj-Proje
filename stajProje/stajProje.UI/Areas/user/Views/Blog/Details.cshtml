@model stajProje.UI.DTOs.BlogDtos.BlogDto

@{
    Layout = "~/Areas/user/Views/Shared/_UserMenu.cshtml";
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>
<p>@Model.Content</p>
<p>Kategori: @Model.Category.Name</p>
<p>Tarih: @Model.PublishedAt?.ToString("dd MMM yyyy")</p>
<p>Yazar: @Model.Author.Name</p>

<h2>Yorumlar</h2>
@foreach (var comment in Model.Comments)
{
    <div class="comment">
        <p>@comment.Content</p>
        <p>Yazar: @comment.User.Name</p>
        <p>Tarih: @comment.CreatedDate.ToString("dd MMM yyyy")</p>
    </div>
}
<h3>Yorum Ekle</h3>
<form asp-action="Create" asp-controller="Comment" method="post">
    <input type="hidden" name="BlogId" value="@Model.Id" />
    <textarea name="Content" required></textarea>
    <button type="submit">Gönder</button>
</form>
